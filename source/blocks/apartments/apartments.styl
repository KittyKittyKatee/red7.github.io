.apartments
    padding 176px 0 100px
    background-color bg
    &__wrap
        width 100%
    &__title
        margin-bottom 26px
    &__text
        font 24px/35px 'Cera Pro Medium', sans-serif
        margin-bottom 50px
        color white
    &__slide
        display grid
        grid-template-columns 1.1fr 1fr
        width 100%
        height 510px
    &__slider
        position relative
    &__content
        background-color white
        padding 48px 50px 40px
        display flex
        flex-direction column
        justify-content space-between
    &__row
        display grid
        margin-bottom 26px
        grid-template-columns 1fr 1fr
        font 18px/26px 'Cera Pro Bold', sans-serif
        span, li
            font 17px/26px 'Cera Pro Regular', sans-serif
        ul
            list-style none
            margin 0
    &__btn
        width 100%
    &__arrow
        align-self center
        display flex
        height 80px
        width 80px
        position absolute
        top 50%
        transform translate(0,-50%)
        z-index 10
        cursor pointer
        transition all 0.2s ease-in-out
        &:last-child
            right -180px
        &:first-child
            left -180px 
        &:first-child:hover
            transform translate(-5%,-50%)
            svg
                path
                    fill white
                .cls-1
                    fill red
        &:last-child:hover
            transform translate(5%,-50%)
            svg
                path
                    fill white
                .cls-1
                    fill red
        svg
            height 80px
            width 80px
            transition all 0.2s ease-in-out
    &__img
        background-color #333335
        display flex
        justify-content center
        align-items center
        img 
            height 90%
            width 90%
            object-fit cover

.tabs
    display flex
    margin-bottom 62px
    &__tab
        background-color tab-bg
        color white
        border-radius 2px
        padding 16px 36px
        font 12px/1 'Cera Pro Regular', sans-serif
        cursor pointer
        margin-right 4px
        text-transform uppercase
        letter-spacing 1px
        transition all 0.2s
        &:hover
            background-color lighten(tab-bg, 2)
    &__tab.active
        background-color white
        color black
        font 12px/1 'Cera Pro Bold', sans-serif
