.slider
    &__slide
        position relative
        height 772px
        overflow hidden
    &__wrap
        position absolute
        top 0
    &__counter
        display flex
        aligh-items flex-start
        margin-bottom 20px
        &--large
            color white
            font 50px/1 'Cera Pro Bold', sans-serif
            letter-spacing 0.1em
            width 85px
        &--small
            color white
            font 21px/1 'Cera Pro Medium', sans-serif
            margin-top 8px
            letter-spacing 0.8em
    &__text
        color white
        font 20px/26px 'Cera Pro Medium', sans-serif
    &__info
        background-color red
        width 456px
        height 220px
        position relative
        margin 190px 115px 0
        display flex
        justify-self flex-end
        flex-direction column
        padding 30px 40px 0
        box-sizing border-box
        @media (max-width 800px)
            position absolute
            top 0
            left 0

            margin 0
        @media(max-width 460px)
            width 100%
            height auto
            padding-bottom 40px
        &::before
            content ''
            position absolute
            top -25px
            left -26px
            height 32px
            width 1px
            background #000
        &::after
            content ''
            height 1px
            width 31px
            background #000
            position absolute
            top -25px
            left -26px
    &__content
        height 772px
        max-width 1610px
        width 100%
        padding 0 10px
        margin 0 auto
        display grid
        grid-template-columns 100px 1fr 100px
        position absolute
        top 0
        left 50%
        transform translateX(-50%)
    &__arrow
        align-self center
        display flex
        height 100px
        width 100px
        position relative
        z-index 10
        cursor pointer
        transition all 0.2s ease-in-out
        &:first-child:hover
            transform translateX(-5%)
            rect
                fill red
            path 
                fill white
        &:last-child:hover
            transform translateX(5%)
            rect
                fill red
            path 
                fill white
        svg
            height 100px
            width 100px
            rect, path  
                transition all 0.2s ease-in-out
        @media(max-width 800px)
            position absolute
            bottom 15px
            left 15px
            &:last-child
                right 20px
                left auto

