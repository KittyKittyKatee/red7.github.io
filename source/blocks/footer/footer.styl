.footer
	height 185px
	display flex
	@media (max-width 1000px)
		flex-direction column
		height 370px
	span 
		border-bottom 2px solid white
	&__link
		font 18px/24px 'Cera Pro Regular', sans-serif
		color white
		text-decoration none

		transition all 0.2s
		&:hover
			color red
	&__left
		display flex
		background-color white
		width 50%
		@media (max-width 1000px)
			width 100%
			height 185px
		svg
			height 100%
			width 132px
	&__wrap
		display flex
		justify-content space-between
		align-items center
		@media (max-width 500px)
			flex-direction column
			justify-content center
			align-items flex-start
		width 80%
		height 100%
		margin 0 auto
	&__call
		display flex
		justify-content center
		align-items center

		width 100%
		button
			@media (max-width 500px)
				min-width 200px
	&__documents
		display flex
		align-items center
		i 
			margin-right 20px
		a
			padding-bottom 10px
		@media (max-width 500px)
			margin-bottom 20px
	&__right
		width 50%
		@media (max-width 1000px)
			width 100%
			height 185px
		svg
			height 53px
			width 38px
		a
			max-width 200px
			text-align right
			@media (max-width 500px)
				text-align left