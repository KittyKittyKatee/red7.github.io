.offer
    background url(../../assets/images/luxury-bg.png) no-repeat
    background-size cover
    padding 286px 0 96px
    &__title
        margin-bottom 30px
    &__text
        font 400 28px/34px 'Cera Pro Regular', sans-serif
        margin-bottom 66px
        color white
        max-width 580px
    &__form
        background-color white
        padding 60px 90px 72px
        box-sizing border-box
        width 100%
        display grid
        grid-template-columns 1fr 1fr
        align-items center
        p
            margin 0
            font 20px/25px 'Cera Pro Medium', sans-serif
            color light-gray
    &__subtitle
        margin 0
        font 32px/38px 'Cera Pro Bold', sans-serif
        margin-bottom 14px
        color black
    &__count
        display flex
        justify-content flex-end
        font 14px/1 'Cera Pro Medium', sans-serif
        color gray
        display flex
        align-items flex-end
    &__current
        color red
        font 18px/1 'Cera Pro Medium', sans-serif
    &__input
        position relative
        margin-bottom 20px
        span
            position absolute
            right 0
            top 50%
            transform translate(0, -50%)
            cursor pointer
            transition all 0.2s ease-in-out
            &:hover
                right 3px
            img 
                width 22px
                height 16px
    &__agree
        font 12px/15px "Cera Pro Regular", sans-serif
        color black
    &__input-slider
        input
            box-shadow none
            border none 
            border-bottom 3px solid black
            font 20px/1 'Cera Pro Bold', sans-serif
            padding-bottom 16px
            background-color white
            width 100%
            outline none
            &::placeholder
                font 20px/1 'Cera Pro Bold', sans-serif