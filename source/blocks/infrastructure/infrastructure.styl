.infrastructure
    background-color dark-bg
    padding 216px 0 0
    &__title
        margin-bottom 46px
        @media(max-width 520px)
            font-size 40px
    &__text
        font 24px/35px 'Cera Pro Medium', sans-serif
        margin-bottom 50px
        color white
        max-width 970px
        margin-bottom 128px
    .slider
        &__info
            background-color dark-gray
            color white
            width 654px
            height 282px
            justify-self flex-start
            position relative
            @media (max-width 1100px)
                margin-right auto
                margin-left auto
            @media (max-width 800px)
                margin 0
            @media (max-width 650px)
                width 100%
                padding-bottom 30px
            @media (max-width 480px)
                height 320px
        &__content
            @media(max-width 960px)
                grid-template-columns 1fr
        &__btn
            position absolute
            bottom -70px
            left 0
            height 80px
        &__counter--large
            color red
        &__title
            font 30px/36px 'Cera Pro Bold', sans-serif
            margin 0
            margin-bottom 18px
        &__arrow
            @media(max-width 960px)
                position absolute
                bottom 15px
                left 15px
                &:last-child
                    right 20px
                    left auto
