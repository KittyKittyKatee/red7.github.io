            .infrastructure__main.slider
                .slider__slide
                    img(src="../assets/images/slider_2-1.jpg")
                    .slider__content
                        .slider__arrow
                            <svg xmlns="http://www.w3.org/2000/svg" class="svg-icon arrow-left" viewBox="0 0 100 100">
