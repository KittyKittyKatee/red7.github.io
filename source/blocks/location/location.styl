.location
    overflow hidden
    &__wrap
        width 100%

        padding 170px 20px 182px
    &__top
        display flex
        justify-content space-between
        @media(max-width 768px)
            flex-direction column
    &__title
        position relative

        margin-top 15px
        margin-right 30px
        @media(max-width 1040px)
           font-size 42px
        @media(max-width 768px)
            margin-bottom 30px

            font-size 60px
        @media(max-width 520px)
            font-size 40px
        &::after
            position absolute
            content url(../../assets/images/contacts-lines.svg)
            top -75%
            left -160px
            width 475px
            height 533px
            z-index -5
    &__img
        position relative

        margin-left 130px
        @media(max-width 1200px)
            margin-left 30px
            margin-right 100px
        @media(max-width 768px)
            width fit-content
            margin 0 auto

            margin-top 70px
        @media(max-width 520px)
            width 300px
        img
            @media(max-width 520px)
                width 300px
        span
            font 60px/1 'Cera Pro Regular', sans-serif
        &::before
            content ''

            position absolute
            right -170px
            top -630px
            z-index -10

            height 1502px
            width 2px

            background #fff
            opacity 0.1
            
            transform rotate(24deg)
        &::after
            content url(../../assets/images/red-seven.svg)
            
            position absolute
            top -20px
            left 480px
           
            height 700px
            width 93px
            @media(max-width 1200px)
                left 350px
            @media(max-width 768px)
                left 430px
                top -120px
    &__circle
        position absolute
        top 57px
        left 50%
        
        display flex
        justify-content center
        align-items center

        width 220px
        height 220px

        border-radius 50%

        background-color white
        transform translateX(-50%)
        @media(max-width 520px)
            top 50px

            width 200px
            height 200px
    &__main
        display flex
        @media(max-width 1200px)
            justify-content space-between
        @media(max-width 768px)
            flex-direction column
    &__advs
        display flex
        flex-direction column
    &__subtitle
        margin 0
        margin-bottom 18px

        font 32px/36px 'Cera Pro Bold', sans-serif
        color white
    &__btn
        position relative

        max-width 330px

        margin-top 60px
        &::before
            position absolute
            top -63%
            right -28px
            z-index -10
            
            content url(../../assets/images/line-to-pin.png)

            height 1502px
            width 2px
    &__elem
        display grid
        grid-template-columns 1.2fr 3fr

        max-width 485px

        margin-bottom 50px
        @media(max-width 1200px)
            grid-template-columns 100px 3fr
            grid-column-gap 20px
        p
            font 18px/26px 'Cera Pro Regular', sans-serif
            color white
        &:first-child
            .location__subtitle
                margin-top 38px
            img
                height 105px
                width 95px
        &:hover
            img, svg
                animation little-shake 0.8s cubic-bezier(.36,.07,.19,.97) both
                transform: translate3d(0, 0, 0);
.quote
    max-width 560px
    svg
        width 100%
        height 20px
    p
        margin 7px 0 14px

        font 25px/38px 'Cera Pro Medium', sans-serif
        color white
        @media(max-width 1040px)
           font-size 20px
           line-height 28px
    &__autor
        display inline-block
        
        margin-top 30px
        margin-bottom 80px
       
        font 15px/1 'Cera Pro Regular', sans-serif
        text-transform uppercase
        letter-spacing 1.8px
        color white

@keyframes little-shake {
  10%, 90% {
    transform: translate3d(-1px, 0, 0);
  }
  
  20%, 80% {
    transform: translate3d(2px, 0, 0);
  }

  30%, 50%, 70% {
    transform: translate3d(-4px, 0, 0);
  }

  40%, 60% {
    transform: translate3d(4px, 0, 0);
  }
}

.icon-location-1 {
    height: 105px;
    width: 95px;
}
