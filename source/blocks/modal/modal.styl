.modal
    position fixed
    z-index 1000
    display none

    width 100vw
    height 100vh
    &__bg
        position fixed
        z-index 1000
        top 0

        width 100vw
        height 100vh

        background black
        opacity 0.8
    &__wrap
        position relative
        z-index 1001

        width 700px

        padding 90px 90px 60px
        box-sizing border-box
        margin 50px auto

        color white

        background-color bg
    &__title
        margin-bottom 20px

        font 45px/1 'Cera Pro Medium', sans-serif
        text-align center
    &__text
        margin-bottom 60px

        font 25px/1 'Cera Pro Regular', sans-serif
        text-align center
    input 
        display block
        width 100%
        height 45px
        
        margin-bottom 20px
        box-shadow none
        border none 
        border-bottom 3px solid white
        outline none

        font 20px/1 'Cera Pro Bold', sans-serif
        color white

        background-color transparent
        &:last-child
            margin-bottom 0
        &::placeholder
            color white
        &.error
            border-color red
            animation shake 0.8s ease-in-out
            &::placeholder
                color red
    &__btn
        button(red)
        margin 35px auto 0
    &__agree
        font 12px/15px "Cera Pro Regular", sans-serif

        margin 30px auto 0
    &__close
        position absolute
        right 30px
        top 30px

        box-shadow none
        border none
        outline none

        background-color transparent
        cursor pointer
        &:hover
            svg
                polygon
                    fill red
        svg
            width 24px
            height 24px
            polygon
                fill white
                transition all 0.3s
    
@keyframes shake {
  0% {
    transform: translateX(-12px);
  }
  10% {
    transform: translateX(9px);
  }
  20% {
    transform: translateX(-11px);
  }
  30% {
    transform: translateX(11px);
  }
  40% {
    transform: translateX(9px);
  }
  50% {
    transform: translateX(-8px);
  }
  60% {
     transform: translateX(9px);
  }
  70% {
    transform: translateX(-6px);
  }
  80% {
     transform: translateX(8px);
  }
  90% {
    transform: translateX(-5px);
  }
  100% {
    transform: translateX(3px);
  }
}