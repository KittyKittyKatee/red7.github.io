.security
    padding 196px 0 70px
    &__title
        margin-bottom 56px
    &__text
        font 22px/30px 'Cera Pro Medium', sans-serif
        color white
        margin-bottom: 150px
        max-width 880px
    &__elems
        display grid
        grid-template-columns 1fr 1fr
        grid-gap 20px
    &__btn
        margin 50px auto 0
    

.security-elem
    width 100%
    min-height 386px
    padding 68px 58px 0
    box-sizing border-box
    background light-black
    position relative
    transition all 0.3s ease-in-out
    &:hover
        background white
        .security-elem__title
            color black
        .security-elem__text
            color black
        .security-elem__count
            opacity 0.2
    &__top
        display grid
        grid-template-columns 140px 1fr
        margin-bottom 32px
    &__title
        margin 0
        font 24px/30px 'Cera Pro Bold', sans-serif
        color white
        transition all 0.3s ease-in-out
    &__text
        font 17px/23px 'Cera Pro Regular', sans-serif
        color white
        transition all 0.3s ease-in-out
    &__count 
        font 13px/1 'Cera Pro Medium', sans-serif
        color #434344
        position absolute
        top 20px
        right 20px
        transition all 0.3s ease-in-out

.security-1
    width 114px
    height 88px

.security-2
    width 80px
    height 88px

