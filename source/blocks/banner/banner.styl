.banner
    background url(../../assets/images/bg-2.png) center no-repeat
    // height 1000px
    max-width 100%
    background-size cover
    position relative
    &__wrap
        padding 480px 0 150px
        max-width 1600px
        margin 0 auto
    &__content
        display flex
        flex-direction column
        align-items flex-end 
    &__title
        text-align right
        margin-bottom 20px
    &__scroll
        background url(../../assets/images/rectangle.png) no-repeat
        position absolute
        bottom 0
        left 0
        height 100%
        width 100%
        img
            width 16px
            height 23px
    &__subtitle
        font 38px/44px 'Cera Pro Bold', sans-serif
        color white
        margin 0
        margin-bottom 40px
        position relative
        &::before
            content ''
            width 57px
            height 4px
            background white
            position absolute
            top 20px
            left -96px
    &__slider
        position absolute
        top 0
        z-index -1
    &__btn
        button(red)

