.banner
    background url(../../assets/images/bg-2.png) center no-repeat
    // height 1000px
    max-width 100%
    background-size cover
    position relative
    overflow hidden
    &__wrap
        padding 480px 20px 150px
        max-width 1640px
        margin 0 auto
        @media(max-width 700px)
            padding-top 70%
    &__content
        display flex
        flex-direction column
        align-items flex-end
        @media(max-width 550px)
            align-items flex-start
    &__title
        text-align right
        margin-bottom 20px
        @media(max-width 890px)
            font-size 60px
            line-height 60px
        @media(max-width 550px)
            text-align left 
    &__scroll
        background url(../../assets/images/rectangle.png) no-repeat
        position absolute
        bottom 0
        left 0
        height 100%
        width 100%
        img
            width 16px
            height 23px
    &__subtitle
        font 38px/44px 'Cera Pro Bold', sans-serif
        color white
        margin 0
        margin-bottom 40px
        position relative
        @media(max-width 890px)
            font-size 28px
            line-height 35px
        @media(max-width 600px)
            font-size 20px
            line-height 22px
        &::before
            content ''
            width 57px
            height 4px
            background white
            position absolute
            top 20px
            left -96px
            @media(max-width 600px)
                top 10px
                width 35px
                height 2px
                left -50px
    &__slider
        position absolute
        top 0
        z-index -1
        width 100vw
        overflow-x hidden
        height 100%
    &__slide
        position absolute
        top 0
        transition all 1s
    &__btn
        button(red)

